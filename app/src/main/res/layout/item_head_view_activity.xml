<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/head_rl_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_96px"
                android:background="@color/app_main">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/head_tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/size_32px"/>

    </FrameLayout>

    <TextView
        android:id="@+id/head_tv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_32px"
        android:background="@android:color/transparent"
        android:drawableLeft="@mipmap/icon_header_back"
        android:drawablePadding="@dimen/padding_4px"
        android:gravity="center"
        android:text="@string/tv_back"
        android:textColor="@color/white"
        android:textSize="@dimen/size_30px"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_30px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/head_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_32px"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/head_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>
