<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_error"
            android:layout_width="@dimen/width_180px"
            android:layout_height="@dimen/height_150px"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_refresh_bg"/>

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_70px"
            android:layout_marginTop="@dimen/margin_30px"
            android:background="@drawable/shape_btn_refresh_press"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_60px"
            android:paddingRight="@dimen/padding_60px"
            android:text="@string/btn_refresh"
            android:textColor="@color/white"
            android:textSize="@dimen/size_28px"
            android:textStyle="bold"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>