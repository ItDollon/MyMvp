<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/holo_orange_light"
        android:layout_height="@dimen/height_100px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="这是测试地址"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_2px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_error"
                android:layout_width="@dimen/width_180px"
                android:layout_height="@dimen/height_150px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_refresh_bg"/>

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_70px"
                android:layout_marginTop="@dimen/margin_30px"
                android:background="@drawable/shape_btn_refresh_press"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_60px"
                android:paddingRight="@dimen/padding_60px"
                android:text="@string/btn_refresh"
                android:textColor="@color/white"
                android:textSize="@dimen/size_28px"
                android:textStyle="bold"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>